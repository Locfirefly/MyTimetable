<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="7">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:buttonGravity="center_vertical|bottom"
        app:collapseIcon="@drawable/add">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/vibur"
            android:layout_marginLeft="90dp"
            android:text="SCHEDULING"
            android:textColor="@color/white"
            android:textSize="40dp">

        </TextView>
        <Button
            android:id="@+id/addTB"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:drawableEnd="@drawable/done"
            android:gravity="center">

        </Button>




    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/T2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="350dp"
                android:layout_marginBottom="400dp"
                android:text="T2" />

            <CheckBox
                android:id="@+id/T3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="300dp"
                android:layout_marginBottom="400dp"
                android:text="T3" />



            <CheckBox
                android:id="@+id/T4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="250dp"
                android:layout_marginBottom="400dp"
                android:text="T4" />

            <CheckBox
                android:id="@+id/T5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:layout_marginEnd="200dp"
                android:layout_marginBottom="400dp"
                android:text="T5" />


            <CheckBox
                android:id="@+id/T6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="150dp"
                android:textColor="@color/white"
                android:layout_marginBottom="400dp"
                android:text="T6" />
            <CheckBox
                android:id="@+id/T7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="400dp"
                android:text="T7" />

            <CheckBox
                android:id="@+id/CN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="400dp"
                android:text="CN" />


            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="0dp"
                android:numbersBackgroundColor="@color/white"
                android:numbersInnerTextColor="@color/white"
                android:textColor="@color/white"
                android:theme="@style/MyTimePickerLight"

                style="@style/MyTimePickerLight"
                android:timePickerMode="spinner" />


        </RelativeLayout>


        <EditText
            android:id="@+id/teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="100dp"
            android:hint="TEACHER"
            android:textColor="@color/white"
            android:textColorHint="@color/white">

        </EditText>
        <EditText
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:layout_marginTop="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="200dp"
            android:hint="SUBJECT"
            android:textColor="@color/white"
            android:textColorHint="@color/white">

        </EditText>

        <EditText
            android:id="@+id/classroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:layout_marginTop="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="150dp"
            android:hint="CLASSROOM"
            android:textColor="@color/white"
            android:textColorHint="@color/white">

        </EditText>

        <Button
            android:id="@+id/datestart"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:fontFamily="@font/vibur"
            android:layout_marginBottom="300dp"
            android:text=" SELECT THE DATE START" />

        <Button
            android:id="@+id/dateend"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/vibur"
            android:layout_marginBottom="250dp"
            android:text="SECLECT THE DATE END" />


    </RelativeLayout>

</LinearLayout>